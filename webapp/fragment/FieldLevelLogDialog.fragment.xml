<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Text text="No Logs Available!" visible="{ path: 'fieldLogModel>/', formatter: '.formatNoDataVisible' }" class="sapUiResponsiveMargin" />

	<VBox items="{fieldLogModel>/}" class="sapUiTinyMarginTopBottom sapUiTinyMarginEnd">
		<Panel expandable="true" expanded="false">

			<headerToolbar>
				<OverflowToolbar>
					<Label text="{path: 'fieldLogModel>ChangedAt', formatter: '.formatISOToLocalDateTime'}" class="panelLableCSS"/>
					<ToolbarSpacer />
					<Text text="{fieldLogModel>ChangeSeq}" visible="false"/>
				</OverflowToolbar>
			</headerToolbar>


			<HBox wrap="Wrap" justifyContent="Start" fitContainer="true">
				<VBox width="33%">
					<Label text="Old Value" design="Bold"/>
					<Text text="{fieldLogModel>OldValue}" />
				</VBox>
				<VBox width="33%">
					<Label text="New Value" design="Bold"/>
					<Text text="{fieldLogModel>NewValue}" />
				</VBox>
				<VBox width="33%">
					<Label text="Changed By" design="Bold"/>
					<Text text="{fieldLogModel>ChangedByUname}" />
				</VBox>
			</HBox>
		</Panel>
	</VBox>
</core:FragmentDefinition>